set nocompatible
filetype plugin indent on
set title

" core environment
syntax on
set number
set ruler
set mouse=a
set spell spelllang=en_us

" indentation / tabbing
set autoindent
set softtabstop=2
set tabstop=2
set shiftwidth=2
set expandtab

set noerrorbells
set visualbell
set backup
set swapfile
" set directory^=$HOME/.vim/swap//
