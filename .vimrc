set nocompatible
filetype plugin indent on
set title

" core environment
syntax on
set hlsearch
set number
set ruler
set mouse=a
set spell spelllang=en_us

" indentation / tabbing
set autoindent
set softtabstop=2
set tabstop=2
set shiftwidth=2
set expandtab

set list listchars=tab:\ \ ,trail:Â·
set showbreak=//

set noerrorbells
set novisualbell
set backup
set swapfile
" set directory^=$HOME/.vim/swap//
